<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bitoffer.seckill.mapper.GoodsMapper">
    <resultMap id="goodsMap" type="cn.bitoffer.seckill.model.Goods">
        <id column="goods_id" property="goodsId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="goods_name" property="goodsName"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="Vo_Column_List">
        `id`,
        `create_time`,
        `modify_time`,
        `goods_name`,
        `price`
    </sql>
    <insert id="save" useGeneratedKeys="true" keyProperty="goods.goodsId">
        insert into goods (`goods_name`,`status`)
        values (#{goods.goodsName},#{goods.status});
    </insert>
    <delete id="deleteById">
        delete from goods where goods_id = #{goodsId};
    </delete>
    <update id="update">
        update goods
        <set>
            <if test="goods.goodsId != null">
                `goods_id` = #{goods.goodsId},
            </if>
            <if test="goods.goodsName != null">
                `goods_name` = #{goods.goodsName},
            </if>
            <if test="goods.status != null">
                `status` = #{goods.status},
            </if>
        </set>
        where goods_id = #{goods.goodsId};
    </update>
    <select id="getGoodsById" resultType="cn.bitoffer.seckill.model.Goods">
        select * from goods where goods_id = #{goodsId};
    </select>
    <select id="getGoodsByNum" resultType="cn.bitoffer.seckill.model.Goods">
        select * from goods where goods_id = #{goodsNum} limit 1;
    </select>
</mapper>
